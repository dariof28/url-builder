{
    "name": "dariof28/url-builder",
    "description": "This package provides a UrlBuilder to easily generate urls specifying protocol, params, port etc",
    "keywords": [
        "url",
        "builder",
        "link"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dario Finocchiaro",
            "email": "dariof28.dev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "DariofDev\\UrlBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DariofDev\\UrlBuilder\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "style": "vendor/bin/php-cs-fixer fix --dry-run"
    }
}
